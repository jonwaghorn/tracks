<% if @track.track_connections.length > 0 || creator? %>
<%= heading "Adjacent Tracks" %>
<% end %>
<div id="connecting_tracks">
<% if @existing_connections.nil? && params[:action] != /new|create/ %>
<p style="margin:8px 9px;"><em>Note: add connecting tracks after you have saved your new track.</em></p>
<% else %>
<%= render :partial => "/track_connection/show" %>
<% end %>
</div>
