<h1>Settings</h1>

<div id="user_settings">
  <%= render :partial => 'show_user_settings' %>
</div>

<div id="preferences">
  <%= render :partial => 'show_prefs' %>
</div>

<%= heading "Feature Votes" %>

<div class="tableau">
<% if @setting.user.has_active_votes? %>
<table cellspacing="0" cellpadding="2">
    <tr>
      <th>Votes</th>
      <th width="100%">Feature</th>
    </tr>

    <% @setting.user.votes.group_by(&:feature_id).each do |feature_id, votes| %>
    <tr class="<%= cycle('list-line-odd', 'list-line-even') %>">
      <td><%= votes.length %></td>
      <td><%= h votes.first.feature.title %><span class="edit"> (<%= link_to 'view', votes.first.feature %>)</span></td>
    </tr>
  <% end %>
  </table>
<% else %>
None.<hr/>
<% end %>
<%= link_to 'View all features', :controller => 'features' %>
</div>



</div>
